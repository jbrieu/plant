<html>

<head>
    <title>Plant</title>
    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
    <script src="/javascripts/ui-bootstrap-tpls-0.9.0.min.js"></script>
    <script src="/javascripts/angularApp.js"></script>
    <style .glyphicon-thumbs-up {cursor:pointer}></style>
</head>

<body ng-app="plant">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <ui-view></ui-view>
        </div>
    </div>

    <script type="text/ng-template" id="/home.html">
        <div class="page-header">
            <h1>Plant</h1>
        </div>   

        <table class="table table-striped table-condensed table-hover">
            <tr ng-repeat="m in measures | orderBy : 'Date'">
                <td popover="{{m.comment}}" popover-trigger="mouseenter" popover-append-to-body="true" popover-placement="right">{{ m.source }}</td>
                <td>{{ m.date }}</td>
                <td>{{ m.value }}</td>
                <td>{{ m.type }}</td>                
            </tr>
        </table>
    </script>
</body>

</html>